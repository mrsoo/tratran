@model ShoeEcommerce.Model.AdminManager.RegisterNotify

@{
    ViewData["Title"] = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Share/LayoutAdmin.cshtml";
}
<div class="panel panel-body">
    <div class="panel panel-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="id" />
                    <div class="form-group">
                        <label asp-for="id_Acc" class="control-label">Yêu cầu kiểm duyệt cho tài khoản có id:</label>
                        <input asp-for="id_Acc" class="form-control" disabled />
                        <span asp-validation-for="id_Acc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="id_Mer" class="control-label">id Người gửi:</label>
                        <input asp-for="id_Mer" class="form-control" />
                        <span asp-validation-for="id_Mer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="createdDate" class="control-label">Ngày gửi yêu cầu</label>
                        <input asp-for="createdDate" class="form-control" />
                        <span asp-validation-for="createdDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Checked" /> Trạng thái kiểm duyệt
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="stt" /> @Html.DisplayNameFor(model => model.stt)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn btn-default pull-right" />
                    </div>
                </form>

            </div>

        </div>
        <div class="">
            <a asp-action="Index">Về danh sách</a>
        </div>
    </div>

</div>
