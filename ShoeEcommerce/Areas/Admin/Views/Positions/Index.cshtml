@model IEnumerable<ShoeEcommerce.Model.Advertisements.Position>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Share/LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.height)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.height)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idPosition">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.idPosition">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.idPosition">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
